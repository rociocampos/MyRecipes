<div class="col-md-3 mx-auto shadow p-3 mb-5 bg-light rounded" id="card-home">
    <div class="card text-center">
        <div class="card-header border-warning">
            <h3>New Recipe</h3>
        </div>
        <div class="card-body">
            <form action="/recipes/add"   method="POST">
                <div class="form-group">
                    <input id="input-title" type="text" name="title" class="form-control" placeholder="Title" autofocus>
                </div>
                <div class="form-inline" id="inputs-parent">
                    <input type="text" name="ingredients" class="form-control col-md-9" placeholder="Ingredients">
                    <p id="add-ingredient" class="btn btn-outline-dark mt-3 col-md-2 ml-auto">+</p>
                </div>
                <div class="form-group"></div>

                <div class="form-group">
                    <textarea id="input-description" type="text" name="description" placeholder="Description" class="form-control"></textarea>
                </div>
                <button id="save" class="btn btn-outline-dark">Guardar</button>
            </form>
        </div>
    </div>
</div>